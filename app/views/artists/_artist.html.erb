<tr>
  <td><%= artist.name %></td>
  <td><%= link_to artist.full_name, artist %></td>
  <td><%= artist.discs.count %></td>
  <td><%= artist.tracks.count %></td>
  <% if permitted_to? :edit, artist %>
    <td>
      <%= link_to 'Edit', edit_artist_path(artist), 
                  :class => 'btn btn-small btn-warning' %>
      <% if permitted_to? :destroy, artist %>
        <%= link_to 'Delete', artist, method: :delete, 
                    data: { confirm: "Are you sure you wish to delete '#{artist.full_name}'?" },
                    :class => 'btn btn-small btn-danger' %>
      <% end %>
  <% end %>
  </td>
</tr>

