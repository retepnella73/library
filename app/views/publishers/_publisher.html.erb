<tr>
  <td><%= publisher.sort_name %></td>
  <td><%= link_to publisher.name, publisher %></td>
  <td><%= publisher.location %></td>
  <td><%= publisher.books.count %></td>
  <% if permitted_to? :edit, publisher %>
    <td class="text-right">
      <%= link_to 'Edit', 
                  edit_publisher_path(publisher), 
                  :class => 'btn btn-small btn-warning' %>
      <% if permitted_to? :destroy, publisher %>
        <%= link_to 'Delete', 
                    publisher, 
                    method: :delete, 
                    data: { confirm: "Are you sure you wish to delete '#{publisher.name}'?" },
                    :class => 'btn btn-small btn-danger' %>
      <% end %>
    </td>
  <% end %>
</tr>

