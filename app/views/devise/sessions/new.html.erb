<h2>Log In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="control-group">
    <div class="control-label">
      <%= f.label :login %>
    </div>
    <div class="controls">
      <%= f.text_field :login, :autofocus => true, :placeholder => 'Username or Email' %>
    </div>
  </div>
  <div class="control-group">
    <div class="control-label">
      <%= f.label :password %>
    </div>
    <div class="controls">
      <%= f.password_field :password, :placeholder => 'password' %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="control-group">
    <div class="control-label">
      <%= f.label :remember_me, 'Remember Me', :class => 'checkbox', :title => 'Keep Me Signed In' %>
    </div>
    <div class="controls">
      <%= f.check_box :remember_me %> 
    </div>
  </div>
  <% end -%>
  <div class="control-group">
    <div class="form-actions">
      <%= f.submit "Sign In", :class => 'btn btn-primary' %>
      <%= submit_tag 'Forgot Password?', :type => 'button', :class => 'btn', :onclick => "location.href = '#{new_user_password_path()}'" %>
    </div>
  </div>
<% end %>

