<h2>Authors</h2>

<% if permitted_to? :edit, @author %>
  <table id="authors_edit_table" class="table table-striped" data-source="<%= authors_path(format: 'json') %>">
<% else %>
  <table id="authors_table" class="table table-striped" data-source="<%= authors_path(format: 'json') %>">
<% end %>
  <thead>
    <tr>
      <th>Name Sort</th>
      <th class="span9">Name</th>
      <th class="span1">Books</th>
      <% if permitted_to? :edit, @author %>
        <th class="span2">&nbsp;</th>
      <% end %>
    </tr>
  </thead>
  <tbody id="authors">
    <%= render @authors %>
  </tbody>
</table>

<hr />

<%= link_to 'New Author', new_author_path, :class => 'btn btn-warning' if permitted_to? :create, @author %>

