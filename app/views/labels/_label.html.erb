<tr>
  <td><%= link_to label.name, label %></td>
  <td><%= label.disc_count %></td>
  <% if permitted_to? :edit, label %>
    <td class="text-right">
      <%= link_to 'Edit', 
                  edit_label_path(label), 
                  :class => 'btn btn-small btn-warning' %>
      <% if permitted_to? :destroy, label %>
        <%= link_to 'Delete', 
                    label, 
                    method: :delete, 
                    data: { confirm: "Are you sure you wish to delete '#{label.name}'?" },
                    :class => 'btn btn-small btn-danger' %>
      <% end %>
    </td>
  <% end %>
</tr>
