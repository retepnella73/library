<tr>
  <td><%= disc.sort_title %></td>
  <td><%= disc.sort_artist %></td>
  <td><%= link_to disc.title, disc %></td>
  <td>
    <% if controller.controller_name == 'artists' %>
      <%= disc.disc_format.name %>
    <% else %>
      <%= disc.artist.full_name %>
    <% end %>
  </td>
  <td><%= disc.release_year %></td>
  <% if permitted_to? :edit, disc %>
    <td>
      <%= link_to 'Edit', edit_disc_path(disc), :class => 'btn btn-small btn-warning' %>
    <% if permitted_to? :destroy, disc %>
      <%= link_to 'Delete', disc, method: :delete, data: { confirm: "Are you sure?" },
                  :class => 'btn btn-small btn-danger' %>
    <% end %>
    </td>
  <% end %>
</tr>

