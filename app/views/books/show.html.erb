<h2>
  <%= @book.title %>
</h2>
<h3>
  <em>by </em><%= @book.authors.sort_by{|author| author.last_name}.collect{|author| author.full_name }.to_sentence(:last_word_connector => ' and ') %>
</h3>

<table class="table">
<tr>
  <th class="span2">ISBN</th>
  <td><%= @book.ISBN %></td>
</tr>
<tr>
  <th>Publisher</th>
  <td><%= link_to @book.publisher.name, @book.publisher %></td>
</tr>
<tr>
  <th>Year of Publication</th>
  <td><%= @book.year %></td>
</tr>
<tr>
  <th>Edition</th>
  <td><%= @book.edition %></td>
</tr>
<tr>
  <th>First Published</th>
  <td><%= @book.first_published %></td>
</tr>
<tr>
  <th>Pages</th>
  <td><%= @book.page_count %></td>
</tr>
<tr>
  <th>Binding</th>
  <td><%= @book.binding %></td>
</tr>
<tr>
  <th>Width</th>
  <td><%= @book.width.to_s + ' mm' unless @book.width.blank? %></td>
</tr>
<tr>
  <th>Height</th>
  <td><%= @book.height.to_s + ' mm' unless @book.height.blank? %></td>
</tr>
<tr>
  <th>Thickness</th>
  <td><%= @book.thickness.to_s + ' mm' unless @book.thickness.blank? %></td>
</tr>
<tr>
  <th>Details</th>
  <td><%= markdown(@book.details) %></td>
</tr>
</table>

<hr />

<% if permitted_to? :edit, @book %>
  <%= link_to 'Edit Book', edit_book_path(@book), :class => 'btn btn-warning' %>
<% end %>
<%= link_to 'Back to Books', books_path, :class => 'btn btn-primary' %>

